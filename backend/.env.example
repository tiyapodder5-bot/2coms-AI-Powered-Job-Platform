# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobPortalDB?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.netlify.app

# JWT Secret (Change this to a strong secret)
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Adzuna API (Get free API key from: https://developer.adzuna.com/)
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_API_KEY=your_adzuna_api_key

# Gemini API (Google AI)
GEMINI_API_KEY=your_gemini_api_key

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads/resumes

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
